@{
    ViewData["Title"] = "Home Page";
}

<div class="hero">
    <div class="hero-content text-center">
        <h1 class="display-4">Welcome to Book Store</h1>
        <p class="lead">Your one-stop shop for all your reading needs</p>
        <a class="btn btn-primary btn-lg" href="/Books/Index">Browse Books</a>
    </div>
</div>

<section class="features">
    <div class="container">
        <div class="row">
            <div class="col-md-4 feature-box">
                <i class="fas fa-book feature-icon"></i>
                <h3>Wide Selection</h3>
                <p>Explore a vast collection of books from various genres and authors.</p>
            </div>
            <div class="col-md-4 feature-box">
                <i class="fas fa-tags feature-icon"></i>
                <h3>Great Prices</h3>
                <p>Enjoy competitive pricing on all our books, new and old.</p>
            </div>
            <div class="col-md-4 feature-box">
                <i class="fas fa-shipping-fast feature-icon"></i>
                <h3>Fast Shipping</h3>
                <p>Get your books delivered to your doorstep quickly and efficiently.</p>
            </div>
        </div>
    </div>
</section>
